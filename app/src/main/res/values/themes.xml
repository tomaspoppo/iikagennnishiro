<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ✅ アプリ全体のテーマ -->
    <style name="Theme.iikagennnishiro" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@color/black</item>  <!-- 背景を黒にする -->
        <item name="android:windowDisablePreview">true</item>  <!-- スプラッシュ画面のプレビューを無効化 -->
    </style>

    <!-- ✅ スプラッシュ画面のテーマ -->
    <style name="Theme.SplashScreen" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item> <!-- 🔄 ここ修正 -->
        <item name="android:windowIsTranslucent">false</item>  <!-- 透明処理を防ぐ -->
        <item name="android:windowNoTitle">true</item>  <!-- タイトルバー非表示 -->
        <item name="android:windowFullscreen">true</item>  <!-- フルスクリーン -->
        <item name="android:windowAnimationStyle">@null</item>  <!-- アニメーションを無効化 -->
    </style>

</resources>
